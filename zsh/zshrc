ZSHA_BASE=~/.dotfiles/zsh
source $ZSHA_BASE/antigen/antigen.zsh

export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

export EDITOR=vim

UNAME=`uname`

if [[ $UNAME == 'Darwin' ]]; then
  antigen bundle brew
  antigen bundle brew-cask
fi

antigen use oh-my-zsh

antigen bundle zsh-users/zsh-completions src

antigen bundle tmux
antigen bundle vim
antigen bundle fancy-ctrl-z

antigen bundle git
antigen bundle git-prompt
antigen bundle gitignore

antigen bundle history
antigen bundle autojump

antigen bundle node
antigen bundle npm

antigen bundle golang
antigen bundle pip

antigen bundle mvn
antigen bundle scala
antigen bundle sbt
antigen bundle gradle

antigen bundle vagrant
antigen bundle docker
antigen bundle docker-compose
antigen bundle kubectl
antigen bundle terraform

export FZF_BASE=/usr/local/opt/fzf/
antigen bundle fzf

export NVM_LAZY_LOAD=true
export NVM_AUTO_USE=true
antigen bundle lukechilds/zsh-nvm

antigen theme philips
#antigen theme jreese
#antigen theme frisk

antigen apply


mdcd () {
  mkdir -p -- "$1" && cd -P -- "$1"
}
export mdcd

export RPROMPT=''

export AWS_PROFILE=federate
export AWS_DEFAULT_REGION=us-east-1

export SSH_AUTH_SOCK=~/.yubiagent/sock

export PATH="/usr/local/sbin:$PATH"
export PATH="/Users/mshauneu/Bin:$PATH"
export PATH="/Users/mshauneu/go/bin:$PATH"

alias t="trans -t ru"
alias tp="trans -t ru -speak"

hash -d wp=~/Projects/oath
hash -d mp=~/Projects/my
hash -d tp=~/Projects/tmp

[ -s "/Users/mshauneu/.jabba/jabba.sh" ] && source "/Users/mshauneu/.jabba/jabba.sh"
